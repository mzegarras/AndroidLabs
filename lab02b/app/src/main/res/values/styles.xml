<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>



        <item name="android:buttonStyle">@style/ButtonTextDefault</item>
        <item name="android:editTextStyle">@style/EditTextDefault</item>
    </style>


    <style name="EditTextDefault" parent="@style/Widget.AppCompat.EditText">

        <item name="android:textColor">@color/text_color_letra</item>


    </style>



    <style name="ButtonTextDefault" parent="@android:style/Widget.Button">

        <item name="android:textColor">@color/button_color_letra</item>

    </style>

</resources>
