<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:windowTitleBackgroundStyle">@style/WindowTitleBackgroundCustom</item>
        <!--item name="android:windowBackground">@color/custom_theme_color_amarillo</item-->
        <item name="android:windowBackground">@drawable/fondo_pantallas</item>
        <item name="android:colorForegroundInverse">@color/custom_theme_color_amarillo</item>

        <item name="android:disabledAlpha">0.5</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowTitleStyle">@style/WindowTitleCustom</item>
        <item name="android:buttonStyle">@style/ButtonCustom</item>
        <item name="android:editTextStyle">@style/EditTextCustom</item>
    </style>



    <color name="default_text_color">#FFEAEAEA</color>
    <color name="custom_theme_color_amarillo">#fecc00</color>
    <color name="custom_theme_color_red">#FF0000</color>
    <color name="custom_theme_color_verde">#21610B</color>


    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CodeFont.Red">
        <item name="android:textColor">#FF0000</item>
    </style>

    <style name="EditTextCustom" parent="@android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:lines">1</item>
        <!--item name="android:textColor">@color/color_letra</item-->
        <item name="android:background">@drawable/texto_fondo</item>
    </style>


    <style name="ButtonCustom" parent="@android:style/Widget.Button">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/button_dark_text</item>
        <item name="android:background">@drawable/button_selector</item>
    </style>


    <style name="WindowTitleBackgroundCustom">
        <item name="android:background">@color/custom_theme_color_red</item>
    </style>

    <style name="WindowTitleCustom" parent="android:TextAppearance.WindowTitle">
        <item name="android:textColor">@color/custom_theme_color_amarillo</item>
        <item name="android:textStyle">bold</item>
    </style>





</resources>
